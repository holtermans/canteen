.form-box {
  width: 100%;
  height: auto;
  overflow: hidden;
  padding: 0 40rpx;
  margin-top: 96rpx;
  background: #fff;
}

.form-item {
  position: relative;
  background: #fff;
  height: 96rpx;
  border-bottom: 1px solid #d9d9d9;
}

.form-item .username, .form-item .password, .form-item .mobile, .form-item .code {
  position: absolute;
  top: 26rpx;
  left: 0;
  display: block;
  width: 100%;
  height: 44rpx;
  background: #fff;
  color: #333;
  font-size: 30rpx;
}

.form-item-code {
  margin-top: 32rpx;
  height: auto;
  overflow: hidden;
  width: 100%;
}

.form-item-code .form-item {
  float: left;
  width: 350rpx;
}

.form-item-code .code-btn {
  float: right;
  padding: 20rpx 40rpx;
  border: 1px solid #d9d9d9;
  font-size:10px;
  border-radius: 10rpx;
  color: #fff;
  background: rgb(255, 72, 72);
}

.form-item .clear {
  position: absolute;
  top: 32rpx;
  right: 18rpx;
  z-index: 2;
  display: block;
  background: #fff;
}

.register-btn {
  margin: 60rpx 0 40rpx 0;
  height: 96rpx;
  line-height: 96rpx;
  color: #fff;
  font-size: 30rpx;
  width: 100%;
  border-radius: 6rpx;
}


.container{padding: 140rpx 60rpx;min-height: 100vh;box-sizing: border-box;}
.panel-box{border-radius: 20rpx;box-shadow: 0 0 10px rgba(0,0,0,0.1);background: white;margin: 0 auto;padding: 120rpx 40rpx 70rpx;position: relative;}
.avatar{width: 160rpx;height: 160rpx;border-radius: 50%;border: 3px solid #ff7e00;background: white;position: absolute;left: 0;right: 0;margin: 0 auto;top: -80rpx;box-sizing: border-box;overflow: hidden;}
.avatar image{width: 100%;height: 100%;border-radius: 50%;}
.cell{padding: 15px 0;position: relative;font-size: 30rpx;}
.cell::after{content: '';position: absolute;bottom: 0;left: 0;right: 0;height: 1px;background: #e5e5e5;transform: scaleY(0.5);}
.placeholder-class{font-size: 30rpx;color: #ddd;}
.field__left-icon{margin-right: 20rpx;}
.field__left-icon image{width: 40rpx;height: 40rpx;}
.field__button button{background: white;border: 0;color: #d7242d;font-size: 26rpx;padding: 0 8px;height: 26px;line-height: 26px;}
.field__button button::after{border-top: 0;border-bottom: 0;border-right: 0;border-radius: 0;}

.btn-wrap{padding: 60rpx 60rpx 10rpx;}
.btn-wrap button{background: #d7242d;color: white;border-radius: 46px;}
.btn-wrap button::after{border: 0;}