/* pages/ucenter/record/record.wxss */
page {

  color: #000;
  
  height: 100%;
  background: -webkit-linear-gradient(red, blue);
  /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(red, blue);
  /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(red, blue);
  /* Firefox 3.6 - 15 */
  background: linear-gradient(red, blue);
  /* 标准的语法 */

}

.container {
  height: 100%;
  overflow: scroll;
  margin-top: 100px;
  width: 90%;
  margin: 0 auto;
  background:#f4f4f447;
  padding-top:50px;
}

.date {
  text-align: center;
}



.record-card {
  border-radius: 10rpx;
  padding: 10px;
  width: 90%;
  margin: 5%;
  background: #fff;
}

.record-card .content-wrap .subtile {
  flex: 1;
}

.record-card .content-wrap .time>view {
  display: none;
}

.record-card .content-wrap .time>view:first-child {
  display: block;
  font-size: 20rpx;
  line-height: 20px;

  color: #666666;
  flex: 1;
}

.record-card .content-wrap {
  width: 100%;
  padding: 10px;
}

.record-card .content-wrap .content {
  width: 100%;
  height: 50px;
  margin: 1%;
  display: inline-block;
  display: flex;
  border-radius: 10px;
  vertical-align: middle;

}

.content-title {
  color: #1111115a;
  margin-right: 16px;
  height: 25px;
  line-height: 30px;
}

.content-detail {
  height: 25px;
  line-height: 30px;
}

.price {
  color: #c87d2f;
  margin-right: 16px;
}

.footer {
  display: flex;
  flex-direction: row;
}