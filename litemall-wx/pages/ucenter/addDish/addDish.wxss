.container {
  height: 100vh;
  padding-top: 40rpx;
  height: 100%;
  padding: 0 35rpx;
  background-color: #ffffff;
  box-sizing: border-box;
}

.form-block{
  position: relative;
  margin-bottom: 40rpx;
}

.form-block-title {
  display: block;
  text-align: left;
  margin-bottom: 20rpx;
  font-size: 24rpx;
}

.form-block-input{
  border: 2rpx solid #dbdbdb;
  border-radius: 8rpx;
  font-size: 32rpx;
}

#publish_title {
  height: 80rpx;
  padding: 0 28rpx;
}
#publish_price {
  height: 80rpx;
  padding: 0 28rpx;
}

#publish_desc {
  box-sizing: border-box;
  height: 400rpx;
  width: 100%;
  padding: 28rpx;
}

.form-statement {
  border-left: 4rpx solid #338ff0;
  font-size: 20rpx;
  padding-left: 10rpx;
} 

.form-submit-btn {
  margin-bottom: 40rpx;
  width: 100%;
  height: 84rpx;
  line-height: 84rpx;
  box-sizing: border-box;
  text-align: center;
  background-color: #338ff0;
  color: #fff;
}

.choose-image-area {
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
  justify-content: space-between;
  background-color: #fff;
}

.choose-image-block {
  width: 160rpx;
  height: 160rpx;
  overflow: hidden;
}

.choose-image-view {
  height: 100%;
  width: 100%;
  background-size:cover
}

.choose-controller {
  position: relative;
  width: 100%;
  height: 100%;
  background-color: #dbdbdb;
}

.choose-controller::after, .choose-controller::before {
  content: "";
  display: block;
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: #6e6e6e;
}

.choose-controller::after {
  width: 2rpx;
  height: 40%;
  transform: rotate(-180deg) translate(50%,50%);
}

.choose-controller::before {
  width: 40%;
  height: 2rpx;
  transform: translate(-50%, -50%);
}