<!--pages/ucenter/QRCode/QRCode.wxml-->


<view style="width:100%;height:100%;padding:20px;">
  <view style="background:#fff;padding:20px">

    <view style="background:#fff;width:100%;height:20px;line-height:20px; padding:10px;display:flex;">
      <text>出示二维码扫描核销</text>
      
        <van-image wx:if="{{canteenOrder.orderStatus == 107}}" width="5rem" height="5rem" lazy-load
          src="/static/images/complete.png" />
    </view>

    <van-divider dashed />

    <view style="padding:0 10px">
      <view wx:for="{{canteenOrderList}}" wx:if="{{item.orderSn == orderSn}}">
        <text style="font-weight:bold;"> {{item.date}} {{item.timingName}}</text>
      </view>
      <view wx:for="{{orderDetail}}" style="display:flex">

        <view>
          <van-image round width="2rem" height="2rem" lazy-load src="{{item.dishesPicUrl}}" />
        </view>
        <view style="display:flex;align-items:center; justify-content: center;letter-spacing:1rpx;padding-left:10px">
          <view style="color:#828282">
            {{item.dishesName}} {{item.quantity}}份
          </view>
        </view>

      </view>
    </view>

    <van-divider dashed />

    <view style="display:flex;flex-direction:column;justify-content:center;align-items: center;">
      <view style="background:#f3f3f3;height:50px;line-height:50px">
        <text style="font-size:20rpx">订单号：</text> <text>{{orderSn}}</text>
      </view>
      <view wx:if="{{canteenOrder.orderStatus == 107}}" style="opacity:0.1">
        <canvas type="2d" style="width: 200px; height: 200px;" id="myQrcode"></canvas>
      </view>
      <view wx:else>
        <canvas type="2d" style="width: 200px; height: 200px;" id="myQrcode"></canvas>
      </view>
    </view>

  </view>
</view>