<wxs src="../wxs/org.linlinjava.canteen.redis.utils.wxs" module="org.linlinjava.canteen.redis.utils" />
<wxs src="./index.wxs" module="computed" />

<view
  class="custom-class {{ org.linlinjava.canteen.redis.utils.bem('slider', { disabled }) }}"
  style="{{ inactiveColor ? 'background:' + inactiveColor : '' }}"
  bind:tap="onClick"
>
  <view
    class="van-slider__bar"
    style="{{ barStyle }};{{ computed.barStyle(barHeight, activeColor) }}"
  >
    <view
      class="van-slider__button-wrapper"
      bind:touchstart="onTouchStart"
      catch:touchmove="onTouchMove"
      bind:touchend="onTouchEnd"
      bind:touchcancel="onTouchEnd"
    >
      <slot
        wx:if="{{ useButtonSlot }}"
        name="button"
      />
      <view
        wx:else
        class="van-slider__button"
      />
    </view>
  </view>
</view>
